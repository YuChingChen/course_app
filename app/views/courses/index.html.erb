<h2>Course List</h2>

<%= form_tag courses_path,method: 'get' do %>
class name<%= text_field_tag  :name%>

class teacher<%=text_field_tag :teacher%>
classroom<%=text_field_tag :classroom%>
class time<%=text_field_tag :time%>
class credit<%=text_field_tag :credit%>
<%= submit_tag "Search"%>
<%end%>

<% @course.each do|course|%>
<%=link_to course.name,course_path(course)%>
<%=link_to 'edit course',edit_course_path(course)%>
<%=link_to ' delete course' , course_path(course) ,method: 'delete' %>
<%end%>